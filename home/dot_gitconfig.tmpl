# ~/.gitconfig
# ==============================================================================

[color]
ui = auto

[color "branch"]
upstream = cyan

[commit]
gpgsign = true
template = ~/.gitmessage.txt

[core]
editor = nvim
excludesfile = ~/.gitignore_global

[credential]
{{- if eq .chezmoi.os "linux" }}
helper = libsecret
helper = oauth
{{- else if eq .chezmoi.os "darwin" }}
helper = osxkeychain
helper = oauth
{{- else if eq .chezmoi.os "windows" }}
helper = wincred
helper = oauth
{{- end }}

[diff]
tool = nvimdiff

[difftool]
prompt = false

[init]
defaultBranch = master

[merge]
conflictStyle = zdiff3
tool = nvimdiff

[mergetool]
prompt = false

[mergetool "nvimdiff"]
layout = "LOCAL,BASE,REMOTE / MERGED"

[url "https://github.com/"]
insteadOf = "github:"
insteadOf = "git@github.com:"
pushInsteadOf = "github:"
pushInsteadOf = "git@github.com:"

[url "https://bitbucket.org/"]
insteadOf = "bitbucket:"
insteadOf = "git@bitbucket.org:"
pushInsteadOf = "bitbucket:"
pushInsteadOf = "git@bitbucket.org:"

[user]
email = 5990152+x-user@users.noreply.github.com
name = Pavel Lymarev
signingkey = 6F0A36AE2D57B06F

[include]
path = ~/.gitconfig_aliases
path = ~/.gitconfig_local

[includeIf "hasconfig:remote.*.url:git@bitbucket.org:**/*"]
path = ~/.gitconfig_bitbucket
[includeIf "hasconfig:remote.*.url:https://bitbucket.org/**/*"]
path = ~/.gitconfig_bitbucket

