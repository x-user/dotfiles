# ~/.editorconfig
# ============================================================================ #

root = true

# Common settings
# ---------------------------------------------------------------------------- #
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
# ---------------------------------------------------------------------------- #

# Python
# ---------------------------------------------------------------------------- #
[*.{py,pyw,rpy}]
indent_size = 4
# ---------------------------------------------------------------------------- #

# Go & GNU/Make
# ---------------------------------------------------------------------------- #
[{*.mk,Makefile}]
indent_style = tab

[{*.go,go.mod,go.sum,go.work}]
indent_style = tab
# ---------------------------------------------------------------------------- #

# Markdown
# ---------------------------------------------------------------------------- #
[*.{markdown,md}]
indent_style = tab
trim_trailing_whitespace = false
# ---------------------------------------------------------------------------- #

# Windows scripts
# ---------------------------------------------------------------------------- #
[*.{bat,cmd}]
charset = unset
end_of_line = crlf

[*.{ps1,psd1,psm1,ps1xml}]
end_of_line = crlf
# ---------------------------------------------------------------------------- #

# ============================================================================ #
# code: language=editorconfig vim: set ft=editorconfig:
